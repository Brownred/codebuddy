{
  "name": "codebuddy",
  "displayName": "Yout personal copilot",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "chatView",
          "name": "Chat"
        }
      ]
    },
    "menus": {
      "editor/context": [
        {
          "when": "editorHasSelection",
          "command": "ola.commentCode",
          "group": "CodeBuddy"
        },
        {
          "when": "editorHasSelection",
          "command": "ola.reviewCode",
          "group": "CodeBuddy"
        },
        {
          "when": "editorHasSelection",
          "command": "ola.codeRefactor",
          "group": "CodeBuddy"
        },
        {
          "when": "editorHasSelection",
          "command": "ola.codeOptimize",
          "group": "CodeBuddy"
        },
        {
          "when": "editorHasSelection",
          "command": "ola.codeFix",
          "group": "CodeBuddy"
        },
        {
          "when": "editorHasSelection",
          "command": "ola.sendChatMessage",
          "group": "CodeBuddy"
        }
      ]
    },
    "commands": [
      {
        "command": "ola.commentCode",
        "title": "Ola add comment to selected code."
      },
      {
        "command": "ola.reviewCode",
        "title": "Ola review these selected code."
      },
      {
        "command": "ola.codeRefactor",
        "title": "Ola refactor these selected code."
      },
      {
        "command": "ola.codeOptimize",
        "title": "Ola optimize these selected code."
      },
      {
        "command": "ola.codeFix",
        "title": "Ola fix this error."
      },
      {
        "command": "ola.sendChatMessage",
        "title": "Send to Ola"
      }
    ],
    "configuration": [
      {
        "title": "Your codding buddy, Ola",
        "properties": {
          "google.gemini.apiKey": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "markdownDescription": "Enter your [API Key](https://aistudio.google.com/app/apikey) for Gemini."
          },
          "google.gemini.model": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "markdownDescription": "Provide the name of the model you want to use. Choose from the [base models](https://ai.google.dev/models/gemini) or your own [tuned model](https://ai.google.dev/docs/model_tuning_guidance)."
          },
          "groq.apiKey": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "markdownDescription": "Provide the name of the model you want to use. Choose from the ..."
          },
          "groq.model": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "markdownDescription": "Provide the name of the model you want to use. Choose from the ..."
          },
          "openai.apiKey": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "markdownDescription": "Provide the name of the model you want to use. Choose from the ..."
          },
          "openai.model": {
            "type": [
              "string",
              "null"
            ],
            "default": null,
            "markdownDescription": "Provide the name of the model you want to use. Choose from the ..."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@types/readable-stream": "^4.0.11",
    "@types/vscode": "^1.78.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "@vscode/test-electron": "^2.3.2",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.4.3"
  },
  "dependencies": {
    "@google/generative-ai": "^0.3.0",
    "@types/node-fetch": "^2.6.11",
    "dotenv": "^16.1.4",
    "node-fetch": "^3.3.2",
    "readable-stream": "^4.5.2"
  }
}
